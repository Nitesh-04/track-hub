generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String
  resume       String?
  links        String?
  github       String?
  leetcode     String?
  applications Application[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Application {
  id            String   @id @default(uuid())
  companyName   String
  stipend       Int?
  role          String
  link          String?
  jobDesc       String?
  deadline      DateTime
  notifications Boolean  @default(true)
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rounds        Round[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}

model Round {
  id            String      @id @default(uuid())
  roundTitle    String
  timing        DateTime
  venue         String
  link          String?
  status        Status
  applicationId String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([applicationId])
}

enum Status {
  upcoming
  completed
}
